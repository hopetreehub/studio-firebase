# This file contains environment variables for the application.
# Copy this file to .env and fill in the values.

# Firebase Client SDK Configuration
# These values can be found in your Firebase project settings under "General".
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# API Secret Keys
# These should be strong, random strings and kept secret.
# They are used for server-to-server communication.
BLOG_API_SECRET_KEY=

# OpenAI API Key (optional, for using OpenAI models)
OPENAI_API_KEY=
